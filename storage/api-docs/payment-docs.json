                "tags": [
                    "App Settings"
                ],
                "summary": "Price for service packages",
                "operationId": "eb38104a2d9bcdc0b25170dc5beb50f1",
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Type",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "superboom",
                                "superlike"
                            ],
                            "example": "superboom"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                },
                                "example": {
                                    "meta": {
                                        "error": null,
                                        "status": 200
                                    },
                                    "data": {
                                        "items": [
                                            {
                                                "id": 1,
                                                "count": 3,
                                                "stock": 0,
                                                "is_bestseller": false,
                                                "price_per_one": "280"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Unauthorized"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Customer Authorization"
                ],
                "summary": "Request user authorization",
                "operationId": "a5385ffca73f113abef00ea604d1ca58",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "phone"
                                ],
                                "properties": {
                                    "device_token": {
                                        "description": "Device Token",
                                        "type": "string",
                                        "example": "20bdb8fb3bdadc1bef037eefcaeb56ad6e57f3241c99e734062b6ee829271b71"
                                    },
                                    "phone": {
                                        "description": "Phone Number",
                                        "type": "string",
                                        "example": "+37491563504"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/verify-login": {
            "post": {
                "tags": [
                    "Customer Authorization"
                ],
                "summary": "Verify user by code (Don't forget to add the token from the login)",
                "operationId": "1d15db25b746a28f7c34f0b4bf153890",
                "parameters": [
                    {
                        "name": "Login-Token",
                        "in": "header",
                        "description": "Login token",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "LOGIN_JWT_TOKEN"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "code"
                                ],
                                "properties": {
                                    "code": {
                                        "type": "string",
                                        "example": "7878"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
