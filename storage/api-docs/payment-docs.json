        "/payment/status/{id}": {
            "get": {
                "tags": [
                    "Payments"
                ],
                "summary": "Get payment status by ID",
                "operationId": "9b4a64e8a17a2f4f9f3067a0fed12637",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Payment ID (UUID)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid",
                            "example": "000558ed-d557-4fc0-99da-b23dec6be0bf"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "meta": {
                                            "properties": {
                                                "error": {
                                                    "description": "Error information (null if no error)",
                                                    "type": "null",
                                                    "example": null
                                                },
                                                "status": {
                                                    "description": "HTTP status code",
                                                    "type": "integer",
                                                    "example": 200
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "data": {
                                            "description": "Payment status data",
                                            "properties": {
                                                "status": {
                                                    "description": "Current payment status",
                                                    "type": "string",
                                                    "enum": [
                                                        "completed",
                                                        "pending",
                                                        "failed",
                                                        "canceled"
                                                    ],
                                                    "example": "canceled"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
